<UserControl x:Class="SterlingExample.Views.RequestStorage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot">        
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Sterling requires more isolated storage space to continue." TextWrapping="Wrap"/>
            <TextBlock Text="Please click the button below and confirm to allow Sterling to allocate more space."
                       TextWrapping="Wrap"/>
            <TextBlock Text="Failure to do so may result in application failure." TextWrapping="Wrap"/>
            <Button Content=" Request Storage " Click="Button_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
